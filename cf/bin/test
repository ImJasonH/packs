#!/bin/bash

set -eo pipefail

cd $(dirname "${BASH_SOURCE[0]}")/..

stack=$1
if [[ ! -f ${stack}.json ]]; then
  >&2 echo "No such stack: ${stack}"
  exit 1
fi

repo=github.com/sclevine/packs
run() { docker run --rm -v "$(pwd)/..:/go/src/${repo}" "$@"; }

run "packs/${stack}-test" "${repo}/cf"
run --memory 100m "packs/${stack}-test" "${repo}/cf" -memory 100

